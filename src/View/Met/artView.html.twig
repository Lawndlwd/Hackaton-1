{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center align-items-center my-3 mx-2 mx-lg-0">
            <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 69%" aria-valuenow="69" aria-valuemin="0" aria-valuemax="100">A</div>
                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 20%" aria-valuenow="89" aria-valuemin="69" aria-valuemax="100">M-A</div>
                <div class="progress-bar progress-bar-striped bg-warning text-dark" role="progressbar" style="width: 6%" aria-valuenow="95" aria-valuemin="89" aria-valuemax="100">M</div>
                <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 5%" aria-valuenow="100" aria-valuemin="95" aria-valuemax="100">C</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div id="carouselArt" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for artwork in artworks %}
                    <li data-target="#carouselArt" data-slide-to="{{ loop.index-1 }}" {% if loop.index == 1%} class="active"{% endif %}"></li>
                    {% endfor %}
                </ol>

                <div class="carousel-inner">
                    {% for artwork in artworks %}
                    <div class="carousel-item {% if loop.index == 1%}active{% endif %}">
                        <a href="{{ artwork.objectURL }}" rel="noopener noreferrer" target="_blank"><img src="{{ artwork.primaryImage }}" class="d-block w-100" alt="{{ artwork.title }}"></a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ artwork.title }}</h5>
                            <p>{{ artwork.creditLine }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselArt" role="button" data-slide="prev">
                    <span class="font-third carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselArt" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="row justify-content-center my-3">
            <a href="{{ target }}" alt="" class="btn bg-fourth font-first">Passer à l'époque suivante</a>
        </div>
    </div>
{% endblock %}